<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vladcord" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="colorPrimary">#167d7f</item>
        <item name="colorPrimaryVariant">#167d7f</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorBackgroundFloating">#E4E4E4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="Theme.Vladcord.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotoBoldTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Theme.Vladcord.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Vladcord.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>